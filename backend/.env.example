# Application Configuration
APP_NAME="Docling Document Processing API"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# API Configuration
API_PREFIX="/api"
ALLOWED_HOSTS=["*"]

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:3000","http://127.0.0.1:5173"]

# File Handling
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR="uploads"
TEMP_DIR="temp"
ALLOWED_EXTENSIONS=[".pdf",".docx",".pptx",".xlsx",".html",".png",".jpg",".jpeg",".tiff",".wav",".mp3"]

# Docling Configuration
DOCLING_MODEL="ibm-granite/granite-docling-258M"
DOCLING_DEVICE="auto"  # auto, cpu, cuda, mps
DOCLING_BATCH_SIZE=1

# Processing Configuration
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT=300  # 5 minutes
CLEANUP_INTERVAL=3600  # 1 hour

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="json"  # json or text

# Security (if needed in future)
# SECRET_KEY="your-secret-key-here"
# ACCESS_TOKEN_EXPIRE_MINUTES=30
